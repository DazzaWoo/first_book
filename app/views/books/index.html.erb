<%= flash[:notice] %>

<h1>My Books</h1>
<%= link_to "新增", new_book_path %>
<table>
  <thead>
    <tr>
      <td>title</td>
      <td>content</td>
      <td>price</td>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.content %></td>
        <td><%= book.price %></td>
        <td>
          <%= link_to "edit", edit_book_path(book.id) %>
          <%= link_to "delete", book_path(book.id), method: 'delete', data: {confirm: 'are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>